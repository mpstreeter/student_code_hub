<%= simple_form_for(@project_comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body %>
    <%= f.hidden_field :project_id%>
    <%= f.hidden_field :username, :value => current_user.username %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
