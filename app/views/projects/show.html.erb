<%- model_class = Project -%>
<div class="page-header">
  <h1><%= @project.title %></h1>
  <p> <%= @project.description %> </p>
  <p> Language: <%= @project.language %> </p>
  <p> By: <%= @project.user.full_name %> </p>
</div>

<div class="row">

  <div class="cr-code selectable span6">
  <!-- project code -->
    <pre><code>
    <%= @project.content %>
    </code></pre>
  </div>

  <div>
  <!-- project pic -->
  <%= image_tag(@project.picture_url, :width => 600) if @project.picture.present? %>
  </div>

</div>
<!-- project actions: Edit | Delete -->
<% if user_signed_in? and @project.user_id == current_user.id %>
  <div class="form-actions">
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_project_path(@project), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                project_path(@project),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
<% end %>

<h3>Comments</h3>
<!-- project comments -->
  <% @comments.each do |comment| %>
  <div>
    <strong><%= comment.username %></strong>  &nbsp;&nbsp;&nbsp;
    Posted <%= time_ago_in_words(comment.created_at) %> ago
    <br />
    <p><%= comment.body %></p>
  </div>
<% end %>

<% if user_signed_in? %>
  <br />
  <%= simple_form_for [@project, ProjectComment.new] do |f| %>
        <p>
            <%= f.input :body, label: 'New Comment', :input_html => { 'rows' => 5 } %>
            <%= f.hidden_field :username, :value => current_user.username %>
        </p>
        <div class="form-actions">
      <%= f.submit nil, :class => 'btn', label: 'Add Comment' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  projects_path, :class => 'btn' %>
    </div>
  <% end %>
<% end %>

