<%- model_class = Project -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="span2"><%= model_class.human_attribute_name(:user_id) %></th>
      <th class="span2"><%= model_class.human_attribute_name(:title) %></th>
      <th class="span2"><%= model_class.human_attribute_name(:language) %></th>
      <th class="span8"><%= model_class.human_attribute_name(:description) %></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.user.full_name %></td>
        <td><%= link_to project.title, project_path(project) %></td>
        <td><%= project.language %></td>
        <td><%= project.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

